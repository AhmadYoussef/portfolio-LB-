{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",                // Needed for TSX support
    "jsxImportSource": "preact",       // Makes JSX map to Preact
    "types": ["astro/client", "preact"] // Add Preact JSX types
  }
}
